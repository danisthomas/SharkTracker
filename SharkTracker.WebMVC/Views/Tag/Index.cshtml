@model IEnumerable<SharkTracker.Models.TagListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{<div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TagNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TagLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TagDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SharkId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TagNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TagLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TagDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SharkId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TagNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.TagNumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TagNumber })
            </td>
        </tr>
    }

</table>
